<!-- Parallax Effect -->
<script type="text/javascript">$(document).ready(function(){$('#parallax-pagetitle').parallax("50%", -0.55);});</script>

<section class="parallax-effect">
  <div id="parallax-pagetitle" style="background-image: url(<%= asset_path 'img/page-banner-default3.jpg' %>);">
    <div class="color-overlay"> 
      <!-- Page title -->
      <div class="container">
        <div class="row">
          <div class="col-sm-12">
            <ol class="breadcrumb">
              <li><a href="<%= root_path %>">Home</a></li>
              <li class="active">Star Hotel Rooms</li>
            </ol>
            <h1>All Rooms</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Rooms -->
<section class="rooms mt100">
  <div class="container">
    <div class="row room-list fadeIn appear"> 
      <!-- Rooms -->
      <div class="rooms" id="rooms">
      	<%= render @rooms %>
      </div>
      <!-- End Rooms -->
    </div>
  </div>
  <div id="paginator" align="center" class="mt20">
    <%= paginate @rooms, :theme => 'twitter-bootstrap-3', remote: true, window: 2, outer_window: 3 %>
  </div>
</section>